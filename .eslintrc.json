{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "standard",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "handle-callback-err": "off",
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "indent": ["error", 2],
    "no-unused-vars": "warn",
    "no-console": "warn",
    "no-alert": "warn",
    "camelcase": "warn",
    "eqeqeq": ["error", "always"],
    "no-var": "error",
    "prefer-const": "warn",
    "max-len": ["warn", { "code": 400 }],
    "space-before-function-paren": ["error", "never"],
    "object-curly-spacing": ["error", "never"]
  },
  "globals": {
    "AOS": "readonly",
    "particlesJS": "readonly",
    "BixingStorage": "readonly",
    "BixingFormSecurity": "readonly"
  }
}
