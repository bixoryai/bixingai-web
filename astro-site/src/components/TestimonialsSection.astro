        </div>
    </div>
</section>

<style>
    :root {
        --dark-bg: #080C14;
        --dark-surface: rgba(14, 20, 32, 0.8);
        --primary-color: #0066FF;
        --testimonials-bg: #0E1420;
    }

    /* Testimonials Section Background */
    .testimonials-section {
        background-color: #080C14;
        background-image:
            radial-gradient(circle at 10% 50%, rgba(0, 102, 255, 0.04) 0%, transparent 30%),
            radial-gradient(circle at 90% 50%, rgba(0, 194, 255, 0.04) 0%, transparent 30%);
    }
    
    .testimonials-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: url('/assets/images/circuit-pattern.svg');
        background-size: cover;
        opacity: 0.1;
        z-index: 0;
    }
    
    .section-title::after {
        content: '';
        position: absolute;
        bottom: -10px;
        left: 50%;
        transform: translateX(-50%);
        width: 60px;
        height: 3px;
        background: var(--primary-color);
    }

    /* Card glassmorphism overrides */
    .testimonial-card {
        background: rgba(14, 20, 32, 0.8);
        border: 1px solid rgba(255, 255, 255, 0.06);
        backdrop-filter: blur(12px);
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

    .testimonial-card:hover {
        border-color: rgba(0, 102, 255, 0.5);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3), 0 0 20px rgba(0, 102, 255, 0.1);
    }
</style>

