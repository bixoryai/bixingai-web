---
// Hero Section Component - Converted to Tailwind with preserved styling
---
<link rel="stylesheet" href="/assets/css/hero-section.css">

<section class="hero-section ai-circuit-bg pt-[120px] pb-[140px] relative bg-dark-bg text-white" style="overflow: visible;">
    <div class="hero-particles absolute top-0 left-0 w-full h-full z-[1] pointer-events-none" id="hero-particles"></div>
    
    <div class="w-full px-4">
        <div class="flex items-center justify-center flex-wrap lg:flex-nowrap hero-row">
            <!-- Hero Text Column -->
            <div class="w-full md:w-10/12 lg:w-5/12 lg:ml-0 hero-text-col animate-fade-right">
                <div class="hero-content relative z-[2] pr-4">
                    <h1 class="hero-title display-4 fw-bold text-gradient mb-4 leading-tight" style="background: linear-gradient(135deg, #FFD700, #FF8C00, #FFA500); -webkit-background-clip: text; background-clip: text; -webkit-text-fill-color: transparent; text-shadow: 0 2px 10px rgba(255, 184, 0, 0.2);" data-i18n="hero.title">Empowering Enterprises with AI Innovation</h1>
                    <p class="hero-subtitle text-[1.3rem] font-normal text-gray-light mb-6" data-i18n="hero.subtitle">Custom AI solutions, education, and consultation services to transform your business</p>
                    <div class="hero-buttons mt-8 relative z-[999]" style="pointer-events: auto;">
                        <a href="#services" class="btn btn-primary smooth-scroll relative z-[999]" style="pointer-events: auto;" data-i18n="hero.exploreServices">Explore Services</a>
                    </div>
                </div>
            </div>
            
            <!-- Hero Image Column -->
            <div class="w-full md:w-10/12 lg:w-5/12 lg:ml-[8.333333%] hero-image-col mt-8 lg:mt-0 animate-fade-left">
                <div class="hero-image-container relative z-[2] pl-4">
                    <div class="hero-image">
                        <img src="/assets/images/hero-ai-illustration.svg" alt="AI Innovation" class="max-w-full h-auto" width="600" height="450">
                    </div>
                    
                    <!-- Mobile-specific floating cards -->
                    <div class="floating-card-mobile floating-card-mobile-1">
                        <i class="fas fa-brain"></i>
                        <span data-i18n="hero.floatingCard1">Specialized AI Models</span>
                    </div>
                    <div class="floating-card-mobile floating-card-mobile-2">
                        <i class="fas fa-chart-line"></i>
                        <span data-i18n="hero.floatingCard2">AI Data Solutions</span>
                    </div>
                    <div class="floating-card-mobile floating-card-mobile-3">
                        <i class="fas fa-robot"></i>
                        <span data-i18n="hero.floatingCard3">AI Agents</span>
                    </div>
                    <div class="floating-card-mobile floating-card-mobile-4">
                        <i class="fas fa-lightbulb"></i>
                        <span data-i18n="hero.floatingCard4">Custom AI Strategy</span>
                    </div>
                    <div class="floating-card-mobile floating-card-mobile-5">
                        <i class="fas fa-graduation-cap"></i>
                        <span data-i18n="hero.floatingCard5">AI Education</span>
                    </div>
                    
                    <!-- Desktop floating cards -->
                    <div class="floating-card floating-card-1">
                        <div class="floating-card-icon">
                            <i class="fas fa-brain"></i>
                        </div>
                        <div class="floating-card-text">
                            <span data-i18n="hero.floatingCard1">Specialized AI Models</span>
                            <div class="floating-card-progress">
                                <div class="progress-bar" style="width: 85%"></div>
                            </div>
                        </div>
                    </div>
                    <div class="floating-card floating-card-2">
                        <div class="floating-card-icon">
                            <i class="fas fa-chart-line"></i>
                        </div>
                        <div class="floating-card-text">
                            <span data-i18n="hero.floatingCard2">AI Data Solutions</span>
                            <div class="floating-card-progress">
                                <div class="progress-bar" style="width: 92%"></div>
                            </div>
                        </div>
                    </div>
                    <div class="floating-card floating-card-3">
                        <div class="floating-card-icon">
                            <i class="fas fa-robot"></i>
                        </div>
                        <div class="floating-card-text">
                            <span data-i18n="hero.floatingCard3">AI Agents</span>
                            <div class="floating-card-progress">
                                <div class="progress-bar" style="width: 78%"></div>
                            </div>
                        </div>
                    </div>
                    <div class="floating-card floating-card-4">
                        <div class="floating-card-icon">
                            <i class="fas fa-lightbulb"></i>
                        </div>
                        <div class="floating-card-text">
                            <span data-i18n="hero.floatingCard4">Custom AI Strategy</span>
                            <div class="floating-card-progress">
                                <div class="progress-bar" style="width: 88%"></div>
                            </div>
                        </div>
                    </div>
                    <div class="floating-card floating-card-5">
                        <div class="floating-card-icon">
                            <i class="fas fa-graduation-cap"></i>
                        </div>
                        <div class="floating-card-text">
                            <span data-i18n="hero.floatingCard5">AI Education</span>
                            <div class="floating-card-progress">
                                <div class="progress-bar" style="width: 82%"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Empowered By Section -->
    <div class="empowered-by-section absolute bottom-2.5 left-0 right-0 z-[3] bg-transparent p-0">
        <div class="container mx-auto px-4">
            <div class="flex justify-center">
                <div class="w-full text-center">
                    <div class="empowered-by-content flex items-center justify-center flex-wrap">
                        <span class="empowered-by-text text-white text-xl font-bold mr-5" data-i18n="hero.empoweredBy">Empowered by</span>
                        <span class="ai-model deepseek text-[22px] font-bold mx-4 text-[#3498db]" style="text-shadow: 0 0 10px rgba(52, 152, 219, 0.5);">DEEPSEEK</span>
                        <span class="ai-model qwen text-[22px] font-bold mx-4 text-[#f1c40f]" style="text-shadow: 0 0 10px rgba(241, 196, 15, 0.5);">QWEN</span>
                        <span class="ai-model llama text-[22px] font-bold mx-4 text-[#2ecc71]" style="text-shadow: 0 0 10px rgba(46, 204, 113, 0.5);">LLAMA</span>
                        <span class="ai-model chatgpt text-[22px] font-bold mx-4 text-[#9b59b6]" style="text-shadow: 0 0 10px rgba(155, 89, 182, 0.5);">CHATGPT</span>
                        <span class="ai-model claude text-[22px] font-bold mx-4 text-[#1abc9c]" style="text-shadow: 0 0 10px rgba(26, 188, 156, 0.5);">CLAUDE</span>
                        <span class="ai-model gemini text-[22px] font-bold mx-4 text-[#16a085]" style="text-shadow: 0 0 10px rgba(22, 160, 133, 0.5);">GEMINI</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Hero Wave Shape - Section Boundary Visual -->
    <!-- This wave creates a visual transition from hero section to services section -->
    <div class="hero-shape">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 200" preserveAspectRatio="none" style="display: block; width: 100%; height: 200px; position: relative;">
            <path fill="#0a0a0a" fill-opacity="1" d="M0,160L48,144C96,128,192,96,288,90.7C384,85,480,107,576,117.3C672,128,768,128,864,122.7C960,117,1056,107,1152,96C1248,85,1344,75,1392,69.3L1440,64L1440,200L1392,200C1344,200,1248,200,1152,200C1056,200,960,200,864,200C768,200,672,200,576,200C480,200,384,200,288,200C192,200,96,200,48,200L0,200Z"></path>
        </svg>
    </div>
</section>

<script>
    // Optimized particles.js loading - only when component is visible
    document.addEventListener('DOMContentLoaded', function() {
        if (typeof particlesJS !== 'undefined') {
            const particlesEl = document.getElementById('hero-particles');
            if (particlesEl) {
                // Use Intersection Observer for lazy loading
                const observer = new IntersectionObserver((entries) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting) {
                            particlesJS('hero-particles', {
                                "particles": {
                                    "number": {
                                        "value": 80,
                                        "density": {
                                            "enable": true,
                                            "value_area": 800
                                        }
                                    },
                                    "color": {
                                        "value": "#5ce1e6"
                                    },
                                    "shape": {
                                        "type": "circle",
                                        "stroke": {
                                            "width": 0,
                                            "color": "#000000"
                                        },
                                        "polygon": {
                                            "nb_sides": 5
                                        }
                                    },
                                    "opacity": {
                                        "value": 0.3,
                                        "random": true,
                                        "anim": {
                                            "enable": false,
                                            "speed": 1,
                                            "opacity_min": 0.1,
                                            "sync": false
                                        }
                                    },
                                    "size": {
                                        "value": 3,
                                        "random": true,
                                        "anim": {
                                            "enable": false,
                                            "speed": 40,
                                            "size_min": 0.1,
                                            "sync": false
                                        }
                                    },
                                    "line_linked": {
                                        "enable": true,
                                        "distance": 150,
                                        "color": "#5ce1e6",
                                        "opacity": 0.2,
                                        "width": 1
                                    },
                                    "move": {
                                        "enable": true,
                                        "speed": 2,
                                        "direction": "none",
                                        "random": false,
                                        "straight": false,
                                        "out_mode": "out",
                                        "bounce": false,
                                        "attract": {
                                            "enable": false,
                                            "rotateX": 600,
                                            "rotateY": 1200
                                        }
                                    }
                                },
                                "interactivity": {
                                    "detect_on": "canvas",
                                    "events": {
                                        "onhover": {
                                            "enable": true,
                                            "mode": "grab"
                                        },
                                        "onclick": {
                                            "enable": true,
                                            "mode": "push"
                                        },
                                        "resize": true
                                    },
                                    "modes": {
                                        "grab": {
                                            "distance": 140,
                                            "line_linked": {
                                                "opacity": 0.5
                                            }
                                        },
                                        "bubble": {
                                            "distance": 400,
                                            "size": 40,
                                            "duration": 2,
                                            "opacity": 8,
                                            "speed": 3
                                        },
                                        "repulse": {
                                            "distance": 200,
                                            "duration": 0.4
                                        },
                                        "push": {
                                            "particles_nb": 4
                                        },
                                        "remove": {
                                            "particles_nb": 2
                                        }
                                    }
                                },
                                "retina_detect": true
                            });
                            observer.disconnect(); // Stop observing after initialization
                        }
                    });
                }, { rootMargin: '50px' });
                
                observer.observe(particlesEl);
            }
        }
    });
</script>

<style>
    /* Minimal custom styles for Astro-specific overrides */
    .hero-section {
        overflow: visible !important;
    }

    .hero-particles {
        pointer-events: none;
    }

    .hero-buttons {
        pointer-events: auto;
    }

    /* Ensure proper stacking context */
    .hero-content {
        position: relative;
        z-index: 2;
    }
</style>
