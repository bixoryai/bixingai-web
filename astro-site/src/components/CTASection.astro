---
// CTA Section Component
---

<section class="cta-section relative h-[420px] min-h-0 max-h-[420px] flex items-center justify-center overflow-hidden text-white">
    <!-- Circuit background texture -->
    <div class="cta-circuit absolute inset-0 opacity-10"></div>
    
    <div class="container mx-auto px-4 relative z-10 -mt-2.5 -mb-2.5 scale-y-[1.15] origin-center">
        <div class="max-w-5xl mx-auto">
            <div class="cta-border bg-gradient-to-r from-blue-500/20 via-transparent to-blue-500/20 rounded-2xl p-[2px] animate-rotate-border shadow-lg scale-95">
                <div class="cta-inner rounded-[14px] p-10" style="background: rgba(14, 20, 32, 0.85); backdrop-filter: blur(16px); border: 1px solid rgba(255,255,255,0.08); box-shadow: 0 0 60px rgba(0,102,255,0.08), inset 0 1px 0 rgba(255,255,255,0.06);">
                    <div class="cta-content text-center max-w-3xl mx-auto">
                        <h2 class="text-[2.2rem] font-bold mb-5 leading-tight tracking-tight" style="background: linear-gradient(135deg, #ffffff, #93C5FD); -webkit-background-clip: text; background-clip: text; -webkit-text-fill-color: transparent;" data-i18n="cta.title">Ready to Transform Your Business with AI?</h2>
                        <p class="text-xl text-white/75 leading-relaxed mb-8 max-w-2xl mx-auto" data-i18n="cta.subtitle">Get in touch with our experts to discuss your specific needs and challenges</p>
                        <a href="/contact" class="cta-button inline-block font-semibold px-8 py-3.5 text-lg rounded-full border-none transition-all duration-300 no-underline tracking-wide mt-2.5 hover:-translate-y-1" data-i18n="cta.contactUs">Contact Us Today</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    :root {
        --primary-color: #0066FF;
        --accent-color: #00C2FF;
        --primary-dark: #0047B3;
    }
    
    /* CTA Section Background - matches Services/Portfolio alternating tone */
    .cta-section {
        background: #0C1424;
        border-top: 1px solid rgba(255, 255, 255, 0.06);
        border-bottom: 1px solid rgba(255, 255, 255, 0.06);
    }

    /* Subtle ambient glow â€” much softer, consistent with card glows elsewhere */
    .cta-section::before {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 60%;
        height: 80%;
        background: radial-gradient(ellipse 60% 50% at 50% 50%, rgba(0, 102, 255, 0.05), transparent);
        pointer-events: none;
        z-index: 0;
    }
    
    @keyframes rotate-border {
        0% {
            background: linear-gradient(45deg, rgba(0,102,255,0.25), rgba(0,102,255,0), rgba(0,102,255,0.25));
        }
        50% {
            background: linear-gradient(135deg, rgba(0,102,255,0.25), rgba(0,102,255,0), rgba(0,102,255,0.25));
        }
        100% {
            background: linear-gradient(225deg, rgba(0,102,255,0.25), rgba(0,102,255,0), rgba(0,102,255,0.25));
        }
    }
    
    .animate-rotate-border {
        animation: rotate-border 4s linear infinite;
    }
    
    @keyframes float {
        0%, 100% {
            transform: translateY(0) translateX(0);
        }
        33% {
            transform: translateY(-20px) translateX(10px);
        }
        66% {
            transform: translateY(10px) translateX(-10px);
        }
    }
    
    @keyframes float-delayed {
        0%, 100% {
            transform: translateY(0) translateX(0);
        }
        33% {
            transform: translateY(15px) translateX(-15px);
        }
        66% {
            transform: translateY(-15px) translateX(15px);
        }
    }
    
    @keyframes float-slow {
        0%, 100% {
            transform: translateY(0) translateX(0);
        }
        50% {
            transform: translateY(-30px) translateX(20px);
        }
    }
    
    .animate-float {
        animation: float 6s ease-in-out infinite;
    }
    
    .animate-float-delayed {
        animation: float-delayed 8s ease-in-out infinite;
        animation-delay: 2s;
    }
    
    .animate-float-slow {
        animation: float-slow 10s ease-in-out infinite;
        animation-delay: 1s;
    }
    
    @media (max-width: 768px) {
        .cta-section {
            height: auto;
            min-height: 350px;
            max-height: none;
            padding: 60px 0;
        }

        .cta-section .container {
            transform: scaleY(1);
        }

        .cta-section h2 {
            font-size: 1.8rem;
        }

        .cta-section p {
            font-size: 1.1rem;
        }
    }

    /* CTA button - gold gradient matching site-wide btn-primary */
    .cta-button {
        background: linear-gradient(to right, #FFD700, #FFA07A);
        color: #121212;
        box-shadow: 0 4px 20px rgba(255, 184, 0, 0.25);
    }

    .cta-button:hover {
        box-shadow: 0 8px 30px rgba(255, 184, 0, 0.35);
        color: #121212;
    }
</style>

