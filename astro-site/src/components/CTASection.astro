---
// CTA Section Component
---

<section class="cta-section relative h-[420px] min-h-0 max-h-[420px] flex items-center justify-center overflow-hidden text-white -my-4">
    <!-- Floating decorative elements -->
    <div class="cta-circuit absolute inset-0 opacity-10"></div>
    <div class="cta-floating-element cta-floating-1 absolute top-20 left-20 w-20 h-20 bg-white/10 rounded-full blur-xl animate-float"></div>
    <div class="cta-floating-element cta-floating-2 absolute bottom-20 right-20 w-32 h-32 bg-white/10 rounded-full blur-xl animate-float-delayed"></div>
    <div class="cta-floating-element cta-floating-3 absolute top-1/2 right-1/4 w-24 h-24 bg-white/10 rounded-full blur-xl animate-float-slow"></div>
    
    <div class="container mx-auto px-4 relative z-10 -mt-2.5 -mb-2.5 scale-y-[1.15] origin-center">
        <div class="max-w-5xl mx-auto">
            <div class="cta-border bg-gradient-to-r from-white/20 via-transparent to-white/20 rounded-2xl p-[2px] animate-rotate-border shadow-lg scale-95">
                <div class="cta-inner bg-white/10 backdrop-blur-md rounded-[14px] p-10 shadow-[0_10px_30px_rgba(0,0,0,0.15)]">
                    <div class="cta-content text-center max-w-3xl mx-auto">
                        <h2 class="text-[2.2rem] font-bold text-white mb-5 leading-tight tracking-tight" data-i18n="cta.title">Ready to Transform Your Business with AI?</h2>
                        <p class="text-xl text-white/90 leading-relaxed mb-8 max-w-2xl mx-auto" data-i18n="cta.subtitle">Get in touch with our experts to discuss your specific needs and challenges</p>
                        <a href="/contact" class="cta-button inline-block bg-white text-primary-color font-semibold px-8 py-3.5 text-lg rounded-full border-none shadow-[0_4px_15px_rgba(0,0,0,0.1)] transition-all duration-300 no-underline tracking-wide mt-2.5 hover:-translate-y-1 hover:shadow-[0_8px_20px_rgba(0,0,0,0.2)]" data-i18n="cta.contactUs">Contact Us Today</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    :root {
        --primary-color: #0066FF;
        --accent-color: #00C2FF;
        --primary-dark: #0047B3;
    }
    
    /* CTA Section Background - Dark blue gradient matching original */
    .cta-section {
        background: linear-gradient(135deg, #0066FF, #0047B3);
    }
    
    @keyframes rotate-border {
        0% {
            background: linear-gradient(45deg, rgba(255,255,255,0.2), rgba(255,255,255,0), rgba(255,255,255,0.2));
        }
        50% {
            background: linear-gradient(135deg, rgba(255,255,255,0.2), rgba(255,255,255,0), rgba(255,255,255,0.2));
        }
        100% {
            background: linear-gradient(225deg, rgba(255,255,255,0.2), rgba(255,255,255,0), rgba(255,255,255,0.2));
        }
    }
    
    .animate-rotate-border {
        animation: rotate-border 4s linear infinite;
    }
    
    @keyframes float {
        0%, 100% {
            transform: translateY(0) translateX(0);
        }
        33% {
            transform: translateY(-20px) translateX(10px);
        }
        66% {
            transform: translateY(10px) translateX(-10px);
        }
    }
    
    @keyframes float-delayed {
        0%, 100% {
            transform: translateY(0) translateX(0);
        }
        33% {
            transform: translateY(15px) translateX(-15px);
        }
        66% {
            transform: translateY(-15px) translateX(15px);
        }
    }
    
    @keyframes float-slow {
        0%, 100% {
            transform: translateY(0) translateX(0);
        }
        50% {
            transform: translateY(-30px) translateX(20px);
        }
    }
    
    .animate-float {
        animation: float 6s ease-in-out infinite;
    }
    
    .animate-float-delayed {
        animation: float-delayed 8s ease-in-out infinite;
        animation-delay: 2s;
    }
    
    .animate-float-slow {
        animation: float-slow 10s ease-in-out infinite;
        animation-delay: 1s;
    }
    
    @media (max-width: 768px) {
        .cta-section {
            height: auto;
            min-height: 350px;
            max-height: none;
            padding: 60px 0;
        }
        
        .cta-section .container {
            transform: scaleY(1);
        }
        
        .cta-section h2 {
            font-size: 1.8rem;
        }
        
        .cta-section p {
            font-size: 1.1rem;
        }
    }
</style>

