---
import BaseLayout from '../../layouts/BaseLayout.astro';
import SecondaryHero from '../../components/SecondaryHero.astro';

const title = "Enterprise AI Consultation - Bixing Technology";
const description = "Strategic guidance to integrate AI into your business, optimize operations, and drive innovation";
---

<BaseLayout title={title} description={description}>
	<main>
		<SecondaryHero 
			title="Enterprise AI Consultation" 
			subtitle="Strategic guidance to integrate AI into your business, optimize operations, and drive innovation"
			dataI18nTitle="consultation.hero.title"
			dataI18nSubtitle="consultation.hero.subtitle"
		/>
		
		<!-- Overview Section -->
		<section class="section-padding bg-dark-bg py-20">
			<div class="container mx-auto px-4">
				<div class="text-center mb-12">
					<h2 class="section-title text-4xl font-bold text-white mb-4" data-i18n="consultation.overview.title">Strategic AI Implementation</h2>
					<p class="section-subtitle text-xl text-gray-400" data-i18n="consultation.overview.subtitle">Transforming your business with a comprehensive AI strategy</p>
				</div>
				<div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mt-12">
					<div class="animate-fade-right">
						<p class="text-gray-300 mb-4" data-i18n="consultation.overview.paragraph1">In today's rapidly evolving technological landscape, implementing AI effectively requires more than just technical expertiseâ€”it demands a strategic approach that aligns with your business objectives and organizational culture.</p>
						<p class="text-gray-300 mb-4" data-i18n="consultation.overview.paragraph2">Bixing Technology's Enterprise AI Consultation services provide comprehensive guidance to help your organization navigate the complexities of AI adoption and implementation. Our team of experienced consultants combines deep technical knowledge with business acumen to develop tailored strategies that drive measurable results.</p>
						<p class="text-gray-300" data-i18n="consultation.overview.paragraph3">Whether you're just beginning your AI journey or looking to optimize existing initiatives, our consultative approach ensures that your AI investments deliver maximum value and competitive advantage.</p>
					</div>
					<div class="animate-fade-left flex items-center justify-center">
						<img src="/assets/images/enterprise-consultation.svg" alt="Enterprise AI Consultation" class="max-w-full h-auto">
					</div>
				</div>
			</div>
		</section>

		<!-- Services Section -->
		<section class="section-padding bg-dark-surface py-20">
			<div class="container mx-auto px-4">
				<div class="text-center mb-12">
					<h2 class="section-title text-4xl font-bold text-white mb-4" data-i18n="consultation.services.title">Our Consultation Services</h2>
					<p class="section-subtitle text-xl text-gray-400" data-i18n="consultation.services.subtitle">Comprehensive AI consulting to guide your transformation</p>
				</div>
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mt-12">
					<div class="service-card bg-dark-bg rounded-xl p-8 border border-dark-border hover:border-primary-color transition-all duration-300">
						<div class="service-icon w-16 h-16 bg-gradient-to-r from-primary-color to-accent-color rounded-full flex items-center justify-center mb-6 mx-auto">
							<svg class="w-8 h-8 text-white" viewBox="0 0 24 24" fill="currentColor">
								<path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
							</svg>
						</div>
						<h3 class="text-xl font-bold text-white mb-4 text-center" data-i18n="consultation.services.card1.title">AI Readiness Assessment</h3>
						<p class="text-gray-400 text-center text-sm" data-i18n="consultation.services.card1.text">Evaluate your organization's current state and readiness for AI implementation.</p>
					</div>
					<div class="service-card bg-dark-bg rounded-xl p-8 border border-dark-border hover:border-primary-color transition-all duration-300">
						<div class="service-icon w-16 h-16 bg-gradient-to-r from-primary-color to-accent-color rounded-full flex items-center justify-center mb-6 mx-auto">
							<svg class="w-8 h-8 text-white" viewBox="0 0 24 24" fill="currentColor">
								<path d="M3 3v18h18v-2H5V3H3zm16 5.5l-4 4l-4-4l-4 4L5 10.5V8l3.5 3.5L12 8l3.5 3.5L19 8v.5z"/>
							</svg>
						</div>
						<h3 class="text-xl font-bold text-white mb-4 text-center" data-i18n="consultation.services.card2.title">AI Strategy Development</h3>
						<p class="text-gray-400 text-center text-sm" data-i18n="consultation.services.card2.text">Develop comprehensive AI strategies aligned with your business goals.</p>
					</div>
					<div class="service-card bg-dark-bg rounded-xl p-8 border border-dark-border hover:border-primary-color transition-all duration-300">
						<div class="service-icon w-16 h-16 bg-gradient-to-r from-primary-color to-accent-color rounded-full flex items-center justify-center mb-6 mx-auto">
							<svg class="w-8 h-8 text-white" viewBox="0 0 24 24" fill="currentColor">
								<path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
							</svg>
						</div>
						<h3 class="text-xl font-bold text-white mb-4 text-center" data-i18n="consultation.services.card3.title">Implementation Roadmap</h3>
						<p class="text-gray-400 text-center text-sm" data-i18n="consultation.services.card3.text">Create detailed roadmaps for phased AI implementation and adoption.</p>
					</div>
					<div class="service-card bg-dark-bg rounded-xl p-8 border border-dark-border hover:border-primary-color transition-all duration-300">
						<div class="service-icon w-16 h-16 bg-gradient-to-r from-primary-color to-accent-color rounded-full flex items-center justify-center mb-6 mx-auto">
							<svg class="w-8 h-8 text-white" viewBox="0 0 24 24" fill="currentColor">
								<path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zM9 17H7v-7h2v7zm4 0h-2V7h2v10zm4 0h-2v-4h2v4z"/>
							</svg>
						</div>
						<h3 class="text-xl font-bold text-white mb-4 text-center" data-i18n="consultation.services.card4.title">ROI Analysis</h3>
						<p class="text-gray-400 text-center text-sm" data-i18n="consultation.services.card4.text">Measure and optimize the return on investment for your AI initiatives.</p>
					</div>
				</div>
			</div>
		</section>

		<!-- CTA Section -->
		<section class="py-20 bg-dark-surface">
			<div class="container mx-auto px-4 text-center">
				<h2 class="text-3xl font-bold text-white mb-4" data-i18n="consultation.cta.title">Ready to Develop Your AI Strategy?</h2>
				<p class="text-xl text-gray-400 mb-8 max-w-2xl mx-auto" data-i18n="consultation.cta.subtitle">Contact us today to discuss how our AI consultation services can guide your transformation.</p>
				<a href="/contact" class="inline-block px-8 py-3 text-white font-semibold rounded-lg hover:shadow-lg transition-all duration-300" data-i18n="consultation.cta.button" style="background: linear-gradient(135deg, #00a8ff, #0e4377); border: none;">Get Started</a>
			</div>
		</section>
	</main>
</BaseLayout>

<script is:inline src="/assets/js/i18n-services.js"></script>
<script is:inline>
	// Function to apply translations once they're loaded
	function applyPageTranslations() {
		const currentLang = localStorage.getItem('bixingLanguage') || 'en';
		if (typeof applyTranslations === 'function' && window.translations && window.translations[currentLang]) {
			applyTranslations(currentLang);
			// Mark as initialized only after translations are successfully applied
			window.pageTranslationsInitialized = true;
			return true;
		}
		return false;
	}
	
	// Try to apply translations immediately if scripts are ready
	if (!applyPageTranslations()) {
		// If not ready, wait for DOM and retry
		function initPageTranslations() {
			if (!applyPageTranslations()) {
				// Retry after a short delay if translations aren't ready
				setTimeout(initPageTranslations, 100);
			}
		}
		
		if (document.readyState === 'loading') {
			document.addEventListener('DOMContentLoaded', initPageTranslations);
		} else {
			setTimeout(initPageTranslations, 50);
		}
	}
	
	// Listen for language toggle events
	document.addEventListener('languageToggled', function(e) {
		const lang = e.detail ? e.detail.language : localStorage.getItem('bixingLanguage') || 'en';
		if (typeof applyTranslations === 'function') {
			applyTranslations(lang);
		}
	});
	
	// Also listen for storage events (language changes from other tabs)
	window.addEventListener('storage', function(e) {
		if (e.key === 'bixingLanguage') {
			const lang = e.newValue || 'en';
			if (typeof applyTranslations === 'function') {
				applyTranslations(lang);
			}
		}
	});
</script>

<style>
	:root {
		--dark-bg: #121212;
		--dark-surface: #1e1e1e;
		--dark-border: rgba(255, 255, 255, 0.1);
		--primary-color: #0066FF;
		--accent-color: #00C2FF;
	}
	
	.section-padding {
		padding: 80px 0;
	}
	
	.service-card:hover {
		transform: translateY(-5px);
		box-shadow: 0 15px 30px rgba(0, 0, 0, 0.3);
	}
</style>


