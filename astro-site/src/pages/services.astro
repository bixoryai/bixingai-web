---
import BaseLayout from '../layouts/BaseLayout.astro';
import SecondaryHero from '../components/SecondaryHero.astro';

const title = "Products & Services - Bixing Technology";
const description = "Explore Bixing Technology's comprehensive AI services: AI Education & Training, Custom AI Solutions Development, and Enterprise AI Consultation.";
