---
import BaseLayout from '../layouts/BaseLayout.astro';
import SecondaryHero from '../components/SecondaryHero.astro';

const title = "Careers - Bixing Technology";
const description = "Join Bixing Technology and be part of the AI revolution. Explore career opportunities and help shape the future of enterprise AI solutions.";
---

<BaseLayout title={title} description={description}>
	<main>
		<SecondaryHero 
			title="Careers" 
			subtitle="Join us in shaping the future of enterprise AI"
			dataI18nTitle="careers.page.title"
			dataI18nSubtitle="careers.page.subtitle"
		/>
		
		<!-- Why Join Us Section -->
		<section class="py-20 bg-dark-surface">
			<div class="container mx-auto px-4">
				<div class="max-w-4xl mx-auto text-center mb-16">
					<h2 class="text-3xl font-bold text-white mb-6" data-i18n="careers.whyJoin.title">Why Join Bixing Technology?</h2>
					<p class="text-xl text-gray-400 leading-relaxed" data-i18n="careers.whyJoin.description">
						We're building the future of AI-powered enterprise solutions. Join a team of passionate innovators who are making AI accessible and transformative for businesses worldwide.
					</p>
				</div>
				
				<div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
					<div class="bg-dark-bg/50 rounded-xl p-8 border border-white/10">
						<h3 class="text-xl font-bold text-white mb-4" data-i18n="careers.benefits.innovation.title">Cutting-Edge Work</h3>
						<p class="text-gray-400" data-i18n="careers.benefits.innovation.description">Work with the latest AI technologies and contribute to innovative projects that shape industries.</p>
					</div>
					<div class="bg-dark-bg/50 rounded-xl p-8 border border-white/10">
						<h3 class="text-xl font-bold text-white mb-4" data-i18n="careers.benefits.growth.title">Professional Growth</h3>
						<p class="text-gray-400" data-i18n="careers.benefits.growth.description">Continuous learning opportunities and mentorship to accelerate your career development.</p>
					</div>
					<div class="bg-dark-bg/50 rounded-xl p-8 border border-white/10">
						<h3 class="text-xl font-bold text-white mb-4" data-i18n="careers.benefits.impact.title">Meaningful Impact</h3>
						<p class="text-gray-400" data-i18n="careers.benefits.impact.description">Your work directly helps enterprises transform and achieve their business objectives.</p>
					</div>
					<div class="bg-dark-bg/50 rounded-xl p-8 border border-white/10">
						<h3 class="text-xl font-bold text-white mb-4" data-i18n="careers.benefits.culture.title">Great Culture</h3>
						<p class="text-gray-400" data-i18n="careers.benefits.culture.description">Collaborative, inclusive environment where creativity and innovation thrive.</p>
					</div>
				</div>
			</div>
		</section>
		
		<!-- Open Positions Section -->
		<section class="py-20 bg-dark-bg">
			<div class="container mx-auto px-4">
				<h2 class="text-3xl font-bold text-white text-center mb-12" data-i18n="careers.openPositions.title">Open Positions</h2>
				<div class="max-w-3xl mx-auto">
					<div class="bg-dark-surface rounded-xl p-8 border border-white/10 mb-6">
						<h3 class="text-xl font-bold text-white mb-2" data-i18n="careers.positions.aiEngineer.title">AI Engineer</h3>
						<p class="text-gray-400 mb-4" data-i18n="careers.positions.aiEngineer.description">We're looking for talented AI engineers to join our team...</p>
						<a href="/contact" class="text-primary-color hover:text-accent-color transition-colors" data-i18n="careers.positions.apply">Apply Now</a>
					</div>
					<div class="bg-dark-surface rounded-xl p-8 border border-white/10 mb-6">
						<h3 class="text-xl font-bold text-white mb-2" data-i18n="careers.positions.aiConsultant.title">AI Consultant</h3>
						<p class="text-gray-400 mb-4" data-i18n="careers.positions.aiConsultant.description">Help enterprises implement AI solutions and drive transformation...</p>
						<a href="/contact" class="text-primary-color hover:text-accent-color transition-colors" data-i18n="careers.positions.apply">Apply Now</a>
					</div>
				</div>
			</div>
		</section>
	</main>
</BaseLayout>

<script is:inline src="/assets/js/i18n-careers.js"></script>

<style>
	:root {
		--dark-surface: #1e1e1e;
		--dark-bg: #121212;
		--primary-color: #0066FF;
		--accent-color: #00C2FF;
	}
</style>

