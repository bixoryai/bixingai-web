    // Apply page-specific translations for About page
    function applyAboutTranslations() {
        const currentLang = localStorage.getItem('bixingLanguage') || 'en';

        // Apply page-specific translations (these override global translations)
        if (aboutTranslations[currentLang]) {
            Object.keys(aboutTranslations[currentLang]).forEach(key => {
                const elements = document.querySelectorAll(`[data-i18n="${key}"]`);
                elements.forEach(element => {
                    element.textContent = aboutTranslations[currentLang][key];
                });
            });
        }
    }

    // Apply translations immediately and on language changes
    document.addEventListener('DOMContentLoaded', function() {
        console.log('About page loaded');
        // Apply page-specific translations after global translations
        setTimeout(applyAboutTranslations, 100);
        setTimeout(applyAboutTranslations, 200);
    });

    // Listen for language toggle events and reapply page translations
    document.addEventListener('languageToggled', function(e) {
        console.log('Language toggled event received - applying About page translations');
        setTimeout(applyAboutTranslations, 50);
    });

    // Also listen for storage events
    window.addEventListener('storage', function(e) {
        if (e.key === 'bixingLanguage') {
            console.log('Language storage event received - applying About page translations');
            setTimeout(applyAboutTranslations, 50);
