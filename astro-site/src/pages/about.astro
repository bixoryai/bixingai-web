---
import BaseLayout from '../layouts/BaseLayout.astro';
import SecondaryHero from '../components/SecondaryHero.astro';

const title = "About Us - Bixing Technology";
const description = "Learn about Bixing Technology, pioneers in enterprise AI innovation. We empower organizations with AI education, custom solutions, and strategic consultation.";
---

<BaseLayout title={title} description={description}>
	<main>
		<SecondaryHero 
			title="About Us" 
			subtitle="Pioneers in enterprise AI innovation"
			dataI18nTitle="about.hero.title"
			dataI18nSubtitle="about.hero.subtitle"
		/>
		
		<!-- Mission Section -->
		<section class="mission-section py-20 relative overflow-hidden">
			<div class="container mx-auto px-4">
				<div class="max-w-3xl mx-auto text-center mission-content relative z-10">
					<h2 class="mission-title text-4xl font-bold text-white mb-8 inline-block relative" data-i18n="about.mission.title">Our Mission</h2>
					<p class="mission-statement text-2xl leading-relaxed mb-8 text-gray-300" data-i18n="about.mission.statement">
						Our mission is to empower enterprises through innovative AI solutions that transform operations, enhance decision-making, and drive sustainable growth.
					</p>
					<div class="mission-visual">
						<div class="circuit-animation">
							<svg width="100%" height="100" viewBox="0 0 800 100" xmlns="http://www.w3.org/2000/svg">
								<path class="circuit-path" d="M0,50 Q200,10 400,50 T800,50" stroke="#0066FF" stroke-width="2" fill="none" />
								<circle class="circuit-node" cx="0" cy="50" r="5" fill="#FFD700" />
								<circle class="circuit-node" cx="200" cy="10" r="5" fill="#0066FF" />
								<circle class="circuit-node" cx="400" cy="50" r="5" fill="#00C2FF" />
								<circle class="circuit-node" cx="600" cy="90" r="5" fill="#8B5CF6" />
								<circle class="circuit-node" cx="800" cy="50" r="5" fill="#FFD700" />
							</svg>
						</div>
					</div>
				</div>
			</div>
		</section>
		
		<!-- What We Do Section -->
		<section class="what-we-do-section py-20 bg-dark-surface">
			<div class="container mx-auto px-4">
				<div class="text-center mb-12">
					<div class="max-w-3xl mx-auto">
						<h2 class="section-title text-4xl font-bold text-white mb-4 inline-block relative" data-i18n="about.whatwedo.title">What We Do</h2>
						<p class="section-subtitle text-xl text-gray-400" data-i18n="about.whatwedo.subtitle">Comprehensive AI solutions tailored to enterprise needs</p>
					</div>
				</div>
				<div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto">
					<div class="service-box bg-white/5 rounded-xl p-8 border border-white/10 hover:border-primary-color hover:-translate-y-2.5 hover:shadow-[0_15px_30px_rgba(0,0,0,0.3)] transition-all duration-300 h-full">
						<div class="service-icon w-[70px] h-[70px] rounded-full flex items-center justify-center mb-5 text-white text-3xl bg-gradient-to-r from-blue-500 to-blue-600">
							<svg class="w-8 h-8" viewBox="0 0 24 24" fill="currentColor">
								<path d="M5 13.18v4L12 21l7-3.82v-4L12 17l-7-3.82zM12 3L1 9l11 6l9-4.91V17h2V9L12 3z"/>
							</svg>
						</div>
						<h3 class="text-xl font-bold text-white mb-4" data-i18n="about.services.education.title">AI Education & Training</h3>
						<p class="text-gray-400 mb-4" data-i18n="about.services.education.desc">Comprehensive training programs designed to equip your team with the knowledge and skills needed to leverage AI effectively in your business operations.</p>
						<ul class="list-none p-0 mt-4 space-y-2">
							<li class="flex items-center text-gray-300">
								<svg class="w-5 h-5 mr-2 text-primary-color flex-shrink-0" viewBox="0 0 24 24" fill="currentColor">
									<path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
								</svg>
								<span data-i18n="about.services.education.item1">Executive AI literacy programs</span>
							</li>
							<li class="flex items-center text-gray-300">
								<svg class="w-5 h-5 mr-2 text-primary-color flex-shrink-0" viewBox="0 0 24 24" fill="currentColor">
									<path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
								</svg>
								<span data-i18n="about.services.education.item2">Technical AI development courses</span>
							</li>
							<li class="flex items-center text-gray-300">
								<svg class="w-5 h-5 mr-2 text-primary-color flex-shrink-0" viewBox="0 0 24 24" fill="currentColor">
									<path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
								</svg>
								<span data-i18n="about.services.education.item3">Customized workshops</span>
							</li>
						</ul>
					</div>
					<div class="service-box bg-white/5 rounded-xl p-8 border border-white/10 hover:border-primary-color hover:-translate-y-2.5 hover:shadow-[0_15px_30px_rgba(0,0,0,0.3)] transition-all duration-300 h-full">
						<div class="service-icon w-[70px] h-[70px] rounded-full flex items-center justify-center mb-5 text-white text-3xl bg-gradient-to-r from-purple-500 to-purple-600">
							<svg class="w-8 h-8" viewBox="0 0 24 24" fill="currentColor">
								<path d="M9.4 16.6L4.8 12l4.6-4.6L8 6l-6 6 6 6 1.4-1.4zm5.2 0L19.2 12l-4.6-4.6L16 6l6 6-6 6-1.4-1.4z"/>
							</svg>
						</div>
						<h3 class="text-xl font-bold text-white mb-4" data-i18n="about.services.solutions.title">AI Custom Solutions</h3>
						<p class="text-gray-400 mb-4" data-i18n="about.services.solutions.desc">Tailored AI applications and systems developed to address your specific business challenges and unlock new opportunities for growth and efficiency.</p>
						<ul class="list-none p-0 mt-4 space-y-2">
							<li class="flex items-center text-gray-300">
								<svg class="w-5 h-5 mr-2 text-primary-color flex-shrink-0" viewBox="0 0 24 24" fill="currentColor">
									<path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
								</svg>
								<span data-i18n="about.services.solutions.item1">AI data services</span>
							</li>
							<li class="flex items-center text-gray-300">
								<svg class="w-5 h-5 mr-2 text-primary-color flex-shrink-0" viewBox="0 0 24 24" fill="currentColor">
									<path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
								</svg>
								<span data-i18n="about.services.solutions.item2">Model training & deployment</span>
							</li>
							<li class="flex items-center text-gray-300">
								<svg class="w-5 h-5 mr-2 text-primary-color flex-shrink-0" viewBox="0 0 24 24" fill="currentColor">
									<path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
								</svg>
								<span data-i18n="about.services.solutions.item3">Custom AI apps & agents</span>
							</li>
						</ul>
					</div>
					<div class="service-box bg-white/5 rounded-xl p-8 border border-white/10 hover:border-primary-color hover:-translate-y-2.5 hover:shadow-[0_15px_30px_rgba(0,0,0,0.3)] transition-all duration-300 h-full">
						<div class="service-icon w-[70px] h-[70px] rounded-full flex items-center justify-center mb-5 text-white text-3xl bg-gradient-to-r from-teal-500 to-teal-600">
							<svg class="w-8 h-8" viewBox="0 0 24 24" fill="currentColor">
								<path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/>
							</svg>
						</div>
						<h3 class="text-xl font-bold text-white mb-4" data-i18n="about.services.consultation.title">Enterprise AI Consultation</h3>
						<p class="text-gray-400 mb-4" data-i18n="about.services.consultation.desc">Strategic guidance to help you navigate the AI landscape, identify high-value opportunities, and develop a roadmap for successful AI implementation.</p>
						<ul class="list-none p-0 mt-4 space-y-2">
							<li class="flex items-center text-gray-300">
								<svg class="w-5 h-5 mr-2 text-primary-color flex-shrink-0" viewBox="0 0 24 24" fill="currentColor">
									<path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
								</svg>
								<span data-i18n="about.services.consultation.item1">AI readiness assessment</span>
							</li>
							<li class="flex items-center text-gray-300">
								<svg class="w-5 h-5 mr-2 text-primary-color flex-shrink-0" viewBox="0 0 24 24" fill="currentColor">
									<path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
								</svg>
								<span data-i18n="about.services.consultation.item2">Implementation strategy</span>
							</li>
							<li class="flex items-center text-gray-300">
								<svg class="w-5 h-5 mr-2 text-primary-color flex-shrink-0" viewBox="0 0 24 24" fill="currentColor">
									<path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
								</svg>
								<span data-i18n="about.services.consultation.item3">ROI optimization</span>
							</li>
						</ul>
					</div>
				</div>
			</div>
		</section>
		
		<!-- Our Strength Section -->
		<section class="strength-section py-20 bg-darker-bg">
			<div class="container mx-auto px-4">
				<div class="text-center mb-12">
					<div class="max-w-3xl mx-auto">
						<h2 class="section-title text-4xl font-bold text-white mb-4 inline-block relative" data-i18n="about.strength.section.title">Our Strength</h2>
						<p class="section-subtitle text-xl text-gray-400" data-i18n="about.strength.section.subtitle">What sets us apart in the AI landscape</p>
					</div>
				</div>
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 max-w-7xl mx-auto">
					<div class="strength-card bg-white/5 rounded-xl p-6 border border-white/10 hover:bg-white/10 hover:-translate-y-1 transition-all duration-300">
						<div class="flex items-center mb-4">
							<div class="mr-3">
								<svg class="w-8 h-8 text-primary-color" viewBox="0 0 24 24" fill="currentColor">
									<path d="M9.4 16.6L4.8 12l4.6-4.6L8 6l-6 6 6 6 1.4-1.4zm5.2 0L19.2 12l-4.6-4.6L16 6l6 6-6 6-1.4-1.4z"/>
								</svg>
							</div>
							<h3 class="text-lg font-bold text-white m-0" data-i18n="about.strength.expertise.title">Technical Expertise</h3>
						</div>
						<p class="text-gray-400 text-sm mb-4" data-i18n="about.strength.expertise.desc">Our team comprises AI specialists with deep expertise in machine learning, natural language processing, computer vision, and other cutting-edge technologies.</p>
						<div class="progress progress-sm mt-3 h-3 bg-white/10 rounded overflow-hidden">
							<div class="progress-bar bg-gradient-to-r from-blue-500 to-blue-600 h-full rounded transition-all duration-600" style="width: 95%"></div>
						</div>
					</div>
					<div class="strength-card bg-white/5 rounded-xl p-6 border border-white/10 hover:bg-white/10 hover:-translate-y-1 transition-all duration-300">
						<div class="flex items-center mb-4">
							<div class="mr-3">
								<svg class="w-8 h-8 text-primary-color" viewBox="0 0 24 24" fill="currentColor">
									<path d="M12 7V3H2v18h20V7H12zM6 19H4v-2h2v2zm0-4H4v-2h2v2zm0-4H4V9h2v2zm0-4H4V5h2v2zm4 12H8v-2h2v2zm0-4H8v-2h2v2zm0-4H8V9h2v2zm0-4H8V5h2v2zm10 12h-8v-2h2v-2h-2v-2h2v-2h-2V9h8v10zm-2-8h-2v2h2v-2zm0 4h-2v2h2v-2z"/>
								</svg>
							</div>
							<h3 class="text-lg font-bold text-white m-0" data-i18n="about.strength.knowledge.title">Industry Knowledge</h3>
						</div>
						<p class="text-gray-400 text-sm mb-4" data-i18n="about.strength.knowledge.desc">We understand the unique challenges and opportunities across various industries, allowing us to deliver AI solutions that address specific business needs.</p>
						<div class="progress progress-sm mt-3 h-3 bg-white/10 rounded overflow-hidden">
							<div class="progress-bar bg-gradient-to-r from-purple-500 to-purple-600 h-full rounded transition-all duration-600" style="width: 90%"></div>
						</div>
					</div>
					<div class="strength-card bg-white/5 rounded-xl p-6 border border-white/10 hover:bg-white/10 hover:-translate-y-1 transition-all duration-300">
						<div class="flex items-center mb-4">
							<div class="mr-3">
								<svg class="w-8 h-8 text-primary-color" viewBox="0 0 24 24" fill="currentColor">
									<path d="M19.14 12.94c.04-.3.06-.61.06-.94 0-.32-.02-.64-.07-.94l2.03-1.58c.18-.14.23-.41.12-.61l-1.92-3.32c-.12-.22-.37-.29-.59-.22l-2.39.96c-.5-.38-1.03-.7-1.62-.94l-.36-2.54c-.04-.24-.24-.41-.48-.41h-3.84c-.24 0-.43.17-.47.41l-.36 2.54c-.59.24-1.13.57-1.62.94l-2.39-.96c-.22-.08-.47 0-.59.22L2.74 8.87c-.12.21-.08.47.12.61l2.03 1.58c-.05.3-.07.62-.07.94s.02.64.07.94l-2.03 1.58c-.18.14-.23.41-.12.61l1.92 3.32c.12.22.37.29.59.22l2.39-.96c.5.38 1.03.7 1.62.94l.36 2.54c.05.24.24.41.48.41h3.84c.24 0 .44-.17.47-.41l.36-2.54c.59-.24 1.13-.56 1.62-.94l2.39.96c.22.08.47 0 .59-.22l1.92-3.32c.12-.22.07-.47-.12-.61l-2.01-1.58zM12 15.6c-1.98 0-3.6-1.62-3.6-3.6s1.62-3.6 3.6-3.6 3.6 1.62 3.6 3.6-1.62 3.6-3.6 3.6z"/>
								</svg>
							</div>
							<h3 class="text-lg font-bold text-white m-0" data-i18n="about.strength.approach.title">Customized Approach</h3>
						</div>
						<p class="text-gray-400 text-sm mb-4" data-i18n="about.strength.approach.desc">We don't believe in one-size-fits-all solutions. Every AI implementation is tailored to your specific goals, infrastructure, and organizational culture.</p>
						<div class="progress progress-sm mt-3 h-3 bg-white/10 rounded overflow-hidden">
							<div class="progress-bar bg-gradient-to-r from-teal-500 to-teal-600 h-full rounded transition-all duration-600" style="width: 100%"></div>
						</div>
					</div>
					<div class="strength-card bg-white/5 rounded-xl p-6 border border-white/10 hover:bg-white/10 hover:-translate-y-1 transition-all duration-300">
						<div class="flex items-center mb-4">
							<div class="mr-3">
								<svg class="w-8 h-8 text-primary-color" viewBox="0 0 24 24" fill="currentColor">
									<path d="M16 6l2.29 2.29-4.88 4.88-4-4L2 16.59 3.41 18l6-6 4 4 6.3-6.29L22 12V6z"/>
								</svg>
							</div>
							<h3 class="text-lg font-bold text-white m-0" data-i18n="about.strength.results.title">Proven Results</h3>
						</div>
						<p class="text-gray-400 text-sm mb-4" data-i18n="about.strength.results.desc">Our track record speaks for itself, with successful AI implementations that have delivered measurable ROI and transformative business outcomes.</p>
						<div class="progress progress-sm mt-3 h-3 bg-white/10 rounded overflow-hidden">
							<div class="progress-bar bg-gradient-to-r from-orange-500 to-orange-600 h-full rounded transition-all duration-600" style="width: 92%"></div>
						</div>
					</div>
				</div>
			</div>
		</section>
		
		<!-- Values Section -->
		<section class="values-section py-20 bg-gradient-to-br from-dark-bg to-darker-bg">
			<div class="container mx-auto px-4">
				<div class="text-center mb-12">
					<div class="max-w-3xl mx-auto">
						<h2 class="section-title text-4xl font-bold text-white mb-4 inline-block relative" data-i18n="about.values.section.title">Our Values</h2>
						<p class="section-subtitle text-xl text-gray-400" data-i18n="about.values.section.subtitle">The principles that guide our work and relationships</p>
					</div>
				</div>
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 max-w-7xl mx-auto">
					<div class="value-card bg-white/5 rounded-xl p-6 border border-white/10 hover:bg-white/10 hover:border-primary-color transition-all duration-300 h-full">
						<div class="value-icon text-4xl mb-4 text-primary-color">
							<svg class="w-10 h-10" viewBox="0 0 24 24" fill="currentColor">
								<path d="M9 21c0 .5.4 1 1 1h4c.6 0 1-.5 1-1v-1H9v1zm3-19C8.1 2 5 5.1 5 9c0 2.4 1.2 4.5 3 5.7V17c0 .5.4 1 1 1h6c.6 0 1-.5 1-1v-2.3c1.8-1.3 3-3.4 3-5.7 0-3.9-3.1-7-7-7z"/>
							</svg>
						</div>
						<h3 class="text-xl font-bold text-white mb-4" data-i18n="about.values.innovation.title">Innovation</h3>
						<p class="text-gray-400" data-i18n="about.values.innovation.desc">We constantly push the boundaries of what's possible with AI, exploring new approaches and technologies to solve complex challenges.</p>
					</div>
					<div class="value-card bg-white/5 rounded-xl p-6 border border-white/10 hover:bg-white/10 hover:border-primary-color transition-all duration-300 h-full">
						<div class="value-icon text-4xl mb-4 text-primary-color">
							<svg class="w-10 h-10" viewBox="0 0 24 24" fill="currentColor">
								<path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
							</svg>
						</div>
						<h3 class="text-xl font-bold text-white mb-4" data-i18n="about.values.excellence.title">Excellence</h3>
						<p class="text-gray-400" data-i18n="about.values.excellence.desc">We are committed to delivering the highest quality in everything we do, from code to customer service to educational content.</p>
					</div>
					<div class="value-card bg-white/5 rounded-xl p-6 border border-white/10 hover:bg-white/10 hover:border-primary-color transition-all duration-300 h-full">
						<div class="value-icon text-4xl mb-4 text-primary-color">
							<svg class="w-10 h-10" viewBox="0 0 24 24" fill="currentColor">
								<path d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4zm0 10.99h7c-.53 4.12-3.28 7.79-7 8.94V12H5V6.3l7-3.11v8.8z"/>
							</svg>
						</div>
						<h3 class="text-xl font-bold text-white mb-4" data-i18n="about.values.integrity.title">Integrity</h3>
						<p class="text-gray-400" data-i18n="about.values.integrity.desc">We operate with transparency, honesty, and ethical considerations at the forefront of all AI development and implementation.</p>
					</div>
					<div class="value-card bg-white/5 rounded-xl p-6 border border-white/10 hover:bg-white/10 hover:border-primary-color transition-all duration-300 h-full">
						<div class="value-icon text-4xl mb-4 text-primary-color">
							<svg class="w-10 h-10" viewBox="0 0 24 24" fill="currentColor">
								<path d="M16 11c1.66 0 2.99-1.34 2.99-3S17.66 5 16 5c-1.66 0-3 1.34-3 3s1.34 3 3 3zm-8 0c1.66 0 2.99-1.34 2.99-3S9.66 5 8 5C6.34 5 5 6.34 5 8s1.34 3 3 3zm0 2c-2.33 0-7 1.17-7 3.5V19h14v-2.5c0-2.33-4.67-3.5-7-3.5zm8 0c-.29 0-.62.02-.97.05 1.16.84 1.97 1.97 1.97 3.45V19h6v-2.5c0-2.33-4.67-3.5-7-3.5z"/>
							</svg>
						</div>
						<h3 class="text-xl font-bold text-white mb-4" data-i18n="about.values.collaboration.title">Collaboration</h3>
						<p class="text-gray-400" data-i18n="about.values.collaboration.desc">We believe in the power of partnership, working closely with clients and partners to achieve shared success.</p>
					</div>
				</div>
			</div>
		</section>
		
		<!-- CTA Section -->
		<section class="cta-section py-20 bg-dark-surface">
			<div class="container mx-auto px-4">
				<div class="max-w-4xl mx-auto text-center">
					<h2 class="text-3xl font-bold text-white mb-4" data-i18n="about.cta.title">Ready to Transform Your Business with AI?</h2>
					<p class="text-xl text-gray-400 mb-8" data-i18n="about.cta.subtitle">Let's discuss how our AI solutions can address your specific challenges and drive growth.</p>
					<div class="flex flex-wrap justify-center gap-4">
						<a href="/contact" class="px-8 py-3 bg-gradient-to-r from-primary-color to-accent-color text-white font-semibold rounded-lg hover:shadow-lg transition-all duration-300" data-i18n="about.cta.button">Contact Us Today</a>
						<a href="/services" class="px-8 py-3 border-2 border-white/20 text-white font-semibold rounded-lg hover:bg-white/10 transition-all duration-300" data-i18n="nav.services">Explore Services</a>
					</div>
				</div>
			</div>
		</section>
	</main>
</BaseLayout>

<script is:inline src="/assets/js/i18n-about.js"></script>

<style>
	:root {
		--dark-surface: #1e1e1e;
		--dark-bg: #121212;
		--darker-bg: #0a1020;
		--primary-color: #0066FF;
		--accent-color: #00C2FF;
	}
	
	/* Mission Section */
	.mission-section {
		background: linear-gradient(135deg, var(--dark-bg), var(--darker-bg));
		position: relative;
	}
	
	.mission-section::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background-image: url('/assets/images/circuit-pattern.svg');
		background-size: cover;
		opacity: 0.1;
		z-index: 1;
		pointer-events: none;
	}
	
	.mission-title::after {
		content: '';
