---
import BaseLayout from '../layouts/BaseLayout.astro';
import SecondaryHero from '../components/SecondaryHero.astro';

const title = "About Us - Bixing Technology";
const description = "Learn about Bixing Technology, pioneers in enterprise AI innovation. We empower organizations with AI education, custom solutions, and strategic consultation.";
---

<BaseLayout title={title} description={description}>
	<main>
		<SecondaryHero
			title="About Us"
			subtitle="Pioneers in enterprise AI innovation"
			dataI18nTitle="about.hero.title"
			dataI18nSubtitle="about.hero.subtitle"
		/>
		
		<!-- Mission Section -->
		<section class="mission-section py-20 relative overflow-hidden">
			<div class="container mx-auto px-4">
				<div class="max-w-3xl mx-auto text-center mission-content relative z-10 animate-fade-up">
					<h2 class="mission-title text-4xl font-bold text-white mb-8 inline-block relative" data-i18n="about.mission.title">Our Mission</h2>
					<p class="mission-statement text-2xl leading-relaxed mb-8 text-gray-300" data-i18n="about.mission.statement">
						Our mission is to empower enterprises through innovative AI solutions that transform operations, enhance decision-making, and drive sustainable growth.
					</p>
					<div class="mission-visual">
						<div class="circuit-animation">
							<svg width="100%" height="100" viewBox="0 0 800 100" xmlns="http://www.w3.org/2000/svg">
								<path class="circuit-path" d="M0,50 Q200,10 400,50 T800,50" stroke="#0066FF" stroke-width="2" fill="none" />
								<circle class="circuit-node" cx="0" cy="50" r="5" fill="#FFD700" />
								<circle class="circuit-node" cx="200" cy="10" r="5" fill="#0066FF" />
								<circle class="circuit-node" cx="400" cy="50" r="5" fill="#00C2FF" />
								<circle class="circuit-node" cx="600" cy="90" r="5" fill="#8B5CF6" />
								<circle class="circuit-node" cx="800" cy="50" r="5" fill="#FFD700" />
							</svg>
						</div>
					</div>
				</div>
			</div>
		</section>
		
		<!-- What We Do Section -->
		<section class="what-we-do-section py-20 bg-dark-surface">
			<div class="container mx-auto px-4">
				<div class="text-center mb-12 animate-fade-up">
					<div class="max-w-3xl mx-auto">
						<h2 class="section-title text-4xl font-bold text-white mb-4 inline-block relative" data-i18n="about.whatwedo.title">What We Do</h2>
						<p class="section-subtitle text-xl text-gray-400" data-i18n="about.whatwedo.subtitle">Comprehensive AI solutions tailored to enterprise needs</p>
					</div>
				</div>
				<div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto">
					<div class="service-box bg-white/5 rounded-xl p-8 border border-white/10 hover:border-primary-color hover:-translate-y-2.5 hover:shadow-[0_15px_30px_rgba(0,0,0,0.3)] transition-all duration-300 h-full animate-fade-up" style="animation-delay: 0.1s;">
						<div class="service-icon w-[70px] h-[70px] rounded-full flex items-center justify-center mb-5 text-white text-3xl bg-gradient-to-r from-blue-500 to-blue-600">
							<svg class="w-8 h-8" viewBox="0 0 24 24" fill="currentColor">
								<path d="M5 13.18v4L12 21l7-3.82v-4L12 17l-7-3.82zM12 3L1 9l11 6l9-4.91V17h2V9L12 3z"/>
							</svg>
						</div>
						<h3 class="text-xl font-bold text-white mb-4" data-i18n="about.services.education.title">AI Education & Training</h3>
						<p class="text-gray-400 mb-4" data-i18n="about.services.education.desc">Comprehensive training programs designed to equip your team with the knowledge and skills needed to leverage AI effectively in your business operations.</p>
						<ul class="list-none p-0 mt-4 space-y-2">
							<li class="flex items-center text-gray-300">
								<svg class="w-5 h-5 mr-2 text-primary-color flex-shrink-0" viewBox="0 0 24 24" fill="currentColor">
									<path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
								</svg>
								<span data-i18n="about.services.education.item1">Executive AI literacy programs</span>
							</li>
							<li class="flex items-center text-gray-300">
								<svg class="w-5 h-5 mr-2 text-primary-color flex-shrink-0" viewBox="0 0 24 24" fill="currentColor">
									<path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
								</svg>
								<span data-i18n="about.services.education.item2">Technical AI development courses</span>
							</li>
							<li class="flex items-center text-gray-300">
								<svg class="w-5 h-5 mr-2 text-primary-color flex-shrink-0" viewBox="0 0 24 24" fill="currentColor">
									<path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
								</svg>
								<span data-i18n="about.services.education.item3">Customized workshops</span>
							</li>
						</ul>
					</div>
					<div class="service-box bg-white/5 rounded-xl p-8 border border-white/10 hover:border-primary-color hover:-translate-y-2.5 hover:shadow-[0_15px_30px_rgba(0,0,0,0.3)] transition-all duration-300 h-full animate-fade-up" style="animation-delay: 0.2s;">
						<div class="service-icon w-[70px] h-[70px] rounded-full flex items-center justify-center mb-5 text-white text-3xl bg-gradient-to-r from-purple-500 to-purple-600">
							<svg class="w-8 h-8" viewBox="0 0 24 24" fill="currentColor">
								<path d="M9.4 16.6L4.8 12l4.6-4.6L8 6l-6 6 6 6 1.4-1.4zm5.2 0L19.2 12l-4.6-4.6L16 6l6 6-6 6-1.4-1.4z"/>
							</svg>
						</div>
						<h3 class="text-xl font-bold text-white mb-4" data-i18n="about.services.solutions.title">AI Custom Solutions</h3>
						<p class="text-gray-400 mb-4" data-i18n="about.services.solutions.desc">Tailored AI applications and systems developed to address your specific business challenges and unlock new opportunities for growth and efficiency.</p>
						<ul class="list-none p-0 mt-4 space-y-2">
							<li class="flex items-center text-gray-300">
								<svg class="w-5 h-5 mr-2 text-primary-color flex-shrink-0" viewBox="0 0 24 24" fill="currentColor">
									<path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
								</svg>
								<span data-i18n="about.services.solutions.item1">AI data services</span>
							</li>
							<li class="flex items-center text-gray-300">
								<svg class="w-5 h-5 mr-2 text-primary-color flex-shrink-0" viewBox="0 0 24 24" fill="currentColor">
									<path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
								</svg>
								<span data-i18n="about.services.solutions.item2">Model training & deployment</span>
							</li>
							<li class="flex items-center text-gray-300">
								<svg class="w-5 h-5 mr-2 text-primary-color flex-shrink-0" viewBox="0 0 24 24" fill="currentColor">
									<path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
								</svg>
								<span data-i18n="about.services.solutions.item3">Custom AI apps & agents</span>
							</li>
						</ul>
					</div>
					<div class="service-box bg-white/5 rounded-xl p-8 border border-white/10 hover:border-primary-color hover:-translate-y-2.5 hover:shadow-[0_15px_30px_rgba(0,0,0,0.3)] transition-all duration-300 h-full animate-fade-up" style="animation-delay: 0.3s;">
						<div class="service-icon w-[70px] h-[70px] rounded-full flex items-center justify-center mb-5 text-white text-3xl bg-gradient-to-r from-teal-500 to-teal-600">
							<svg class="w-8 h-8" viewBox="0 0 24 24" fill="currentColor">
								<path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/>
							</svg>
						</div>
						<h3 class="text-xl font-bold text-white mb-4" data-i18n="about.services.consultation.title">Enterprise AI Consultation</h3>
						<p class="text-gray-400 mb-4" data-i18n="about.services.consultation.desc">Strategic guidance to help you navigate the AI landscape, identify high-value opportunities, and develop a roadmap for successful AI implementation.</p>
